<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:elevation="6dp"
    app:cardElevation="7dp"
    app:cardMaxElevation="8dp"
    app:cardCornerRadius="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">

        <TextView
            android:id="@+id/item_history_tv_status"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:rotation="45"
            android:background="@drawable/border_text_1"
            android:layout_alignParentEnd="true"
            android:elevation="10dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginRight="-35dp"
            android:text="ESTADO" />

        <TextView
            android:id="@+id/item_today_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31/12/2021"
            android:elevation="10dp"
            android:textStyle="italic"
            android:textColor="#E5F3FF"
            android:textSize="12sp"
            android:background="@drawable/border_text_2"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-5dp"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/item_today_tv_capitule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize="12sp"
            android:elevation="10dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_alignParentEnd="true"
            android:background="@drawable/border_text_2"
            android:layout_marginBottom="-2dp"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="-5dp"
            android:paddingBottom="3dp"
            android:paddingEnd="15dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp" />

        <ImageView
            android:id="@+id/item_today_iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <TextView
                android:id="@+id/item_today_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/border_text_2_2"
                android:layout_marginBottom="-2dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginRight="-4dp"
                android:paddingBottom="3dp"
                android:paddingLeft="16dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"/>
        </LinearLayout>



    </RelativeLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>